extends baseEmail

block content
  p Hi #{firstName},
  p Welcome to Natours, we're glad to have you 🎉🙏
  p First, you need to confirm your account. Just press the button below.
  table.btn.btn-primary(
    role='presentation',
    border='0',
    cellpadding='0',
    cellspacing='0'
  )
    tbody
      tr
        td(align='left')
          table(
            role='presentation',
            border='0',
            cellpadding='0',
            cellspacing='0'
          )
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Confirm Account
  p If you need any help with booking your next tour, please don't hesitate to contact us!
  p -Natours Inc.