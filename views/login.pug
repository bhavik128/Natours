extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Log into your account
      form.form.form--login
        .form__group
          label.form__label(for='email') Email address
          input#email.form__input(
            type='email',
            placeholder='you@example.com',
            required
          )
        .form__group
          label.form__label(for='password') Password
          input#password.form__input(
            type='password',
            placeholder='••••••••',
            required,
            minlength='8'
          )
        ul.footer__nav.ma-bt-md
          li(style='margin-left:0')
            a(href='/forgetPassword' style='font-size: 18px') Forgot your password?
        .form__group
          button.btn.btn--green Login
